        `;
      }
      
      // Load news
      async function loadNews() {
        try {
          const res = await fetch('/data/ai-news.json');
          const data = await res.json();
          
          const timeEl = document.getElementById('updatedTime');
          if (timeEl && data.updated) {
            const d = new Date(data.updated);
            timeEl.textContent = 'æ›´æ–°æ—¶é—´: ' + d.toLocaleString('zh-CN');
          }
          
          const latestContainer = document.getElementById('latestNews');
          const hotContainer = document.getElementById('hotNews');
          
          if (latestContainer && data.latest) {
            latestContainer.innerHTML = data.latest.slice(0, 20).map(renderRow).join('');
          }
          if (hotContainer && data.hot) {
            hotContainer.innerHTML = data.hot.slice(0, 20).map(renderRow).join('');
          }
        } catch (e) {
