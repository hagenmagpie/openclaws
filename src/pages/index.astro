    <script>
      // AI News Loading
      async function fetchAINews() {
        try {
          const res = await fetch('/openclaws/data/ai-news.json');
          const data = await res.json();
          
          // Update time
          const timeEl = document.getElementById('updatedTime');
          if (timeEl && data.updated) {
            const d = new Date(data.updated);
            timeEl.textContent = 'Êõ¥Êñ∞Êó∂Èó¥: ' + d.toLocaleString('zh-CN', { month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit' });
          }
          
          const formatTime = (ts) => {
            const d = new Date(ts);
            return d.toLocaleString('zh-CN', { month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit' });
          };
          
          const renderCard = (item, type) => `
            <a href="${item.url}" target="_blank" class="news-card ${type}">
              <div class="news-title">${item.title}</div>
              ${item.desc ? `<div class="news-desc">${item.desc}</div>` : ''}
              <div class="news-meta">
                <span class="news-source">${item.source}</span>
                <span class="news-time">${formatTime(item.time)}</span>
                ${item.score ? `<span class="news-score">‚ñ≤${item.score}</span>` : ''}
              </div>
            </a>
          `;
          
          const latestContainer = document.getElementById('latestNews');
          const hotContainer = document.getElementById('hotNews');
          
          if (latestContainer && data.latest) {
            latestContainer.innerHTML = data.latest.slice(0, 20).map(item => renderCard(item, 'latest')).join('');
          }
          if (hotContainer && data.hot) {
            hotContainer.innerHTML = data.hot.slice(0, 20).map(item => renderCard(item, 'hot')).join('');
          }
        } catch (e) {
          console.error('Failed to load news:', e);
        }
      }
      
      fetchAINews();
      
      // Search functionality
      const searchInput = document.getElementById('searchInput');
      const searchBtn = document.getElementById('searchBtn');
      const searchResults = document.getElementById('searchResults');
      const searchGrid = document.getElementById('searchGrid');
      const searchCount = document.getElementById('searchCount');
      const latestSection = document.getElementById('latestSection');
      const hotSection = document.getElementById('hotSection');
      
      let searchIndex = null;
      
      // Load search index
      async function loadSearchIndex() {
        try {
          const res = await fetch('/openclaws/data/search-index.json');
          searchIndex = await res.json();
        } catch (e) {
          console.error('Failed to load search index:', e);
        }
      }
      loadSearchIndex();
      
      function performSearch(query) {
        if (!searchIndex || !query) {
          searchResults.style.display = 'none';
          latestSection.style.display = 'block';
          hotSection.style.display = 'block';
          return;
        }
        
        const q = query.toLowerCase();
        const results = searchIndex.news.filter(item => 
          item.title.toLowerCase().includes(q) ||
          (item.desc && item.desc.toLowerCase().includes(q)) ||
          item.source.toLowerCase().includes(q)
        ).slice(0, 50);
        
        searchCount.textContent = results.length + 'Êù°';
        
        const formatTime = (ts) => {
          const d = new Date(ts);
          return d.toLocaleString('zh-CN', { month: 'numeric', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        };
        
        searchGrid.innerHTML = results.map(item => `
          <a href="${item.url}" target="_blank" class="news-card">
            <div class="news-title">${item.title}</div>
            ${item.desc ? `<div class="news-desc">${item.desc}</div>` : ''}
            <div class="news-meta">
              <span class="news-source">${item.source}</span>
              <span class="news-time">${formatTime(item.time)}</span>
              ${item.score ? `<span class="news-score">‚ñ≤${item.score}</span>` : ''}
            </div>
          </a>
        `).join('');
        
        latestSection.style.display = 'none';
        hotSection.style.display = 'none';
        searchResults.style.display = 'block';
      }
      
      searchBtn.addEventListener('click', () => performSearch(searchInput.value));
      searchInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') performSearch(searchInput.value);
      });
      searchInput.addEventListener('input', (e) => {
        if (!e.target.value) {
          searchResults.style.display = 'none';
          latestSection.style.display = 'block';
          hotSection.style.display = 'block';
        }
      });
    </script>
